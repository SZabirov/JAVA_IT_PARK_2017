<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <servlet>
        <servlet-name>myServlet</servlet-name>
        <servlet-class>ru.itpark.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>myServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>nyservlet</servlet-name>
        <servlet-class>ru.itpark.NewYearForm</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>nyservlet</servlet-name>
        <url-pattern>/newyear</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>congrats</servlet-name>
        <servlet-class>ru.itpark.CongratsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>congrats</servlet-name>
        <url-pattern>/congrats</url-pattern>
    </servlet-mapping>

</web-app>